[Unit]
Description=Gunicorn instance to serve gelatin site
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/gelatin_site
Environment="PATH=/opt/gelatin_site/.venv/bin"
ExecStart=/opt/gelatin_site/.venv/bin/gunicorn -w 4 -b 127.0.0.1:8000 app:app

[Install]
WantedBy=multi-user.target
